<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:orientation="horizontal" >
	
	<!-- android:layout_width="1400px"
	android:layout_height="160px" -->
	
	<TextView 
		android:id="@+id/account_menu_name"
		android:layout_width="380px"
		android:layout_height="160px"
		android:textColor="#9c2600"
		android:textSize="50px"
		android:layout_marginLeft="10px"
		android:gravity="center_vertical" />
	<ImageView 
		android:id="@+id/account_subtract"
		android:layout_width="62px"
		android:layout_height="62px"
		android:layout_gravity="center_vertical"
		android:focusable="false"
		android:src="@drawable/account_subtract" />
	<TextView 
		android:id="@+id/account_menu_count"
		android:layout_width="100px"
		android:layout_height="80px"
		android:layout_gravity="center_vertical"
		android:gravity="center"
		android:background="@drawable/account_bg_count"
		android:textSize="50px"
		android:textColor="#4d2f00"
		android:layout_marginLeft="20px" />
	<ImageView 
		android:id="@+id/account_add"
		android:layout_width="62px"
		android:layout_height="62px"
		android:layout_marginLeft="20px"
		android:layout_gravity="center_vertical"
		android:src="@drawable/account_add"/>
	<TextView 
		android:id="@+id/account_menu_price"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textColor="#9c2600"
		android:layout_marginLeft="15px"
		android:textSize="50px" />

</LinearLayout>
